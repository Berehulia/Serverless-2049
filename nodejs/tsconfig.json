{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2020", // targeting Node.js 18.x
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": true,
    "esModuleInterop": true, // More details https://stackoverflow.com/questions/42652423/error-default-is-not-a-constructor
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
